{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false,
    "noEmit": false,
    "allowJs": false
  },
  "include": [
    "./src/**/*.ts",
    "./@types/**/*.d.ts"
  ],
//  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}

