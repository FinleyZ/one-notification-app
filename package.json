{
  "name": "one-notification-app",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "engines": {
    "node": "18.16"
  },
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run build:client && npm run build:server",
    "build:client": "next build",
    "build:server": "nest build --path tsconfig.server.json",
    "start": "node ./dist/main.js",
    "start:dev": "nest start --path tsconfig.server.json --watch",
    "start:debug": "nest start --path tsconfig.server.json --debug --watch",
    "start:prod": "node dist/main",
    "lint": "next lint && eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.9.1",
    "@nestjs/common": "^9.4.3",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^9.4.3",
    "@nestjs/platform-express": "^9.0.0",
    "@prisma/client": "^5.7.1",
    "@types/material-ui": "^0.21.13",
    "@types/swiper": "^6.0.0",
    "argon2": "^0.31.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "googleapis": "^129.0.0",
    "gray-matter": "^4.0.3",
    "nest-next": "^10.1.0",
    "next": "^13.4.2",
    "next-mdx-remote": "^4.4.1",
    "nodemailer": "^6.9.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.11",
    "@types/react": "^18.2.32",
    "@types/react-dom": "^18.2.14",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.5.0",
    "postcss": "^8.4.32",
    "prettier": "^2.3.2",
    "prisma": "^5.7.0",
    "supertest": "^6.1.3",
    "tailwindcss": "^3.4.0",
    "ts-jest": "29.0.5",
    "ts-node": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
